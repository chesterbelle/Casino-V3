[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    venv,
    env,
    tests,
    scripts,
    docs
per-file-ignores =
    __init__.py:F401
    tests/*.py:F841,E712,F541,E402
    utils/*.py:F401,F541,E402
    utils/**/*.py:F401,F541,E402
